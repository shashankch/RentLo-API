<!-- home page template to display only if user is logged in -->
<% if(locals.user) { %> <% if(assets) { %>
<ul class="list-group list-group-horizontal">
  <% for(asset of assets){ %>

  <li class="list-group-item">
    <h5>LOCATION: <%=asset.location%></h5>
    <p>SIZE: <%=asset.size%> BHK</p>
    <p>RENT: <%=asset.rent%> INR</p>
    Activity: <% if(asset.tenant) { %> <% for(tenant of asset.tenant){ %>
    <p>Name : <%=tenant.id.name%></p>
    <p>EmailId : <%=tenant.id.email%></p>
    <p>Status : <%=tenant.stat%></p>
    <div class="dropdown">
      <a
        class="btn btn-outline-success dropdown-toggle btn-sm"
        href="#"
        role="button"
        id="dropdownMenuLink"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
        UPDATE: <%=tenant.stat%>
      </a>
      <!-- dropdown menu container -->
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <!-- links to update status  -->

        <a
          class="dropdown-item"
          href="/home/update-status/<%=asset.id%>/<%=tenant.id._id%>/Accepted"
          >Accept Request</a
        >
        <a
          class="dropdown-item"
          href="/home/update-status/<%=asset.id%>/<%=tenant.id._id%>/Rejected"
          >Reject Request</a
        >
      </div>
    </div>
    <hr />
    <%}%> <%}%>
  </li>

  <%}%>
</ul>
<% } %> <% } %>
